<web-app version="3.0"
         xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
         http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">

    <display-name>Website Tin Tuc</display-name>
    <!--Khi deloy website lên sẽ trỏ đến file index.jsp đầu tiên-->
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
    <servlet>
        <servlet-name>login</servlet-name>
        <jsp-file>/login.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login/*</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>register</servlet-name>
        <jsp-file>/registered.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>register</servlet-name>
        <url-pattern>/register/*</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>Categorya</servlet-name>
        <jsp-file>/category.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>Categorya</servlet-name>
        <url-pattern>/Category/*</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>CategoryPost</servlet-name>
        <servlet-class>vn.haui.web.controller.PostServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CategoryPost</servlet-name>
        <url-pattern>/Category/post/*</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ConnectorServlet</servlet-name>
        <servlet-class>com.ckfinder.connector.ConnectorServlet</servlet-class>
        <init-param>
            <param-name>XMLConfig</param-name>
            <param-value>/WEB-INF/config.xml</param-value>
        </init-param>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>ConnectorServlet</servlet-name>
        <url-pattern>
            /ckfinder/core/connector/java/connector.java
        </url-pattern>
    </servlet-mapping>

    <error-page>
        <error-code>404</error-code>
        <location>/errors/error4.jsp</location>
    </error-page>
    <error-page>
        <error-code>500</error-code>
        <location>/errors/error5.jsp</location>
    </error-page>
</web-app>